<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabs" Grid.ColumnSpan="2" ItemsSource="{Binding Tabs}">
            <TabItem Header="home"/>
            <TabItem Header="drone list">
                <ContentControl Content="{Binding DroneListView}" />
            </TabItem>
            <TabItem Header="drone list2">
                <Label Content="aaa"/>
            </TabItem>

        </TabControl>
        <!--<DockPanel Grid.Row="1" LastChildFill="False" Grid.Column="0">
            <Button Content="drones list" Click="Button_Click" DockPanel.Dock="Left"/>
        </DockPanel>-->
        <!--<ContentControl Grid.Row="2" Content="{Binding SelectedView}" />-->
    </Grid>
</Window>
